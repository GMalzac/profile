<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title %></title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= favicon_tag 'images/favicon.png' %>
  </head>
  <body>

    <div class="navbar-wagon navbar-fixed-top">
      <!-- Logo -->
        <%= image_tag "logov5.png", height: 50 %>

      <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm" id="nav">
        <!-- Links -->
        <ul>
          <li><%= link_to "Home", "#home", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "My skills", "#myskills", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "My portfolio", "#myportfolio", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "About me", "#aboutme", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Contact", "#contact", class: "navbar-wagon-item navbar-wagon-link" %></li>
        </ul>
      </div>

      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a href="#home">Home</a></li>
            <li><a href="#myskills">My skills</a></li>
            <li><a href="#myportfolio">My portfolio</a></li>
            <li><a href="#aboutme">About me</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </div>

    <%= yield %>
    <div class="footer text-center">
      <div class="footer-links">
        <a href="https://github.com/GMalzac" target="blank"><i class="fab fa-github"></i></a>
        <a href="https://www.linkedin.com/in/gregoire-malzac/?locale=en_US" target="blank"><i class="fab fa-linkedin"></i></a>
      </div>
      <div class="footer-logo">
        <%= image_tag "logov5.png", height: 50 %>
      </div>
      <div class="footer-copyright copyright-size">
        Handmade with <i class="fas fa-heart heart"></i>  by myself :) Â©2018
      </div>
      <div class="footer-copyright copyright-size credit">
        <a href="https://www.freepik.com/free-photos-vectors/mockup">Mockup vector created by D3images - Freepik.com</a>
      </div>
    </div>
  </body>
</html>
